<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">   
        <record id="email_template_pfx_expiry_notification" model="mail.template">
            <field name="name">PFX Expiry Notification</field>
            <field name="model_id" ref="model_branch_systems"/>
            <field name="subject">PFX Certificate Expiry Notification</field>
            <field name="email_from">${user.email|safe}</field>
            <field name="email_to">${object.branch_id.email|safe}</field>
            <field name="body_html">
                <![CDATA[
                <p>Dear ${object.branch_id.name},</p>
                <p>This is a reminder that the PFX certificate for your branch is set to expire on ${object.pfx_expiry_date}. Please take the necessary actions to renew it.</p>
                <p>Thank you.</p>
                ]]>
            </field>
        </record>
    </data>

</odoo>
