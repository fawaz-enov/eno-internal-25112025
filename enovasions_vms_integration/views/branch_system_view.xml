<?xml version="1.0" encoding="utf-8"?>   
<odoo>  
  
    <!-- Tree View -->
    <record id="view_branch_system_tree" model="ir.ui.view">
        <field name="name">branch.systems.tree</field>
        <field name="model">branch.systems</field>
        <field name="arch" type="xml">
            <list string="Branch Systems">
                <field name="system_name"/>
                <field name="branch_id"/>
                <field name="pfx_filename"/>
                <field name="pfx_expiry_date"/>
                <field name="pfx_status" string="Connected" widget="boolean_toggle" readonly="1"/>
            </list>
        </field>
    </record> 


    <!-- Form View -->
    <record id="view_branch_system_form" model="ir.ui.view">
        <field name="name">branch.systems.form</field>
        <field name="model">branch.systems</field>
        <field name="arch" type="xml">
            <form string="Branch Systems">
                <header>
                        <button name="upload_pfx" string="Upload PFX" type="object" class="btn-primary" invisible= "pfx_status" />
                    </header>
                <sheet>
                    <group>
                        <group>
                            <field name="system_name" readonly="pfx_status == True"/>
                            <field name="branch_id" readonly="pfx_status == True"/>
                            <field name="pfx_file" widget="binary" string="Upload PFX File"  filename="pfx_filename" readonly="pfx_status == True"/>
                            <field name="pfx_filename" readonly="1" force_save="1"/>
                            <field name="pfx_password" password="True" readonly="pfx_status == True"/>
                            <field name="pfx_uid" readonly="pfx_status == True" />
                            <field name="pfx_pac" readonly="pfx_status == True"/>                       
                            
                        </group>
                        <group>
                            <field name="pfx_expiry_date"  readonly="pfx_status == True"/>
                            <field name="pfx_status" string="Connected" widget="boolean_toggle" readonly="1"/>                        
                        </group>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_branch_systems" model="ir.actions.act_window">
        <field name="name">Branch Systems</field>
        <field name="res_model">branch.systems</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_branch_systems_action"           
              parent="base.menu_users"
              action="action_branch_systems" 
              groups="base.group_no_one"
              sequence="10"/>

</odoo>





