<?xml version="1.0" encoding="utf-8"?>   
<odoo>
    <record id="view_product_timeline_tax_tree" model="ir.ui.view">
        <field name="name">product.timeline.tax.tree</field>
        <field name="model">product.timeline.tax</field>
        <field name="arch" type="xml">
            <list>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="tax_ids"/>
                <field name="product_ids"/>
            </list>
        </field>
    </record>

    <record id="view_product_timeline_tax_form" model="ir.ui.view">
        <field name="name">product.timeline.tax.form</field>
        <field name="model">product.timeline.tax</field>
        <field name="arch" type="xml">
            <form string="Product Timeline Tax">
                <sheet>
                    <group>
                        <field name="start_date" />
                        <field name="end_date" />
                    </group>
                    <group>
                        <field name="tax_ids" widget="many2many_tags"/>
                        <field name="product_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_product_timeline_tax_main" name="Product Timeline Tax"
              parent="account.account_account_menu" sequence="9" groups="account.group_account_manager"/>

    <record id="action_product_timeline_tax" model="ir.actions.act_window">
        <field name="name">Product Timeline Tax</field>
        <field name="res_model">product.timeline.tax</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_product_timeline_tax"
              name="Product Timeline Tax"
              parent="menu_product_timeline_tax_main"
              action="action_product_timeline_tax"/>
</odoo>
