<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_register_form_inherit" model="ir.ui.view">
        <field name="name">view.account.payment.register.form.inherit</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="allowed_vms_payment_type_ids" invisible="1"/>
                <field name="vms_payment_type" options="{'no_create': True, 'no_open': True}" domain="[('id','in', allowed_vms_payment_type_ids)]"/>
            </field>
        </field>
    </record>

    <record id="view_account_payment_form_inherit" model="ir.ui.view">
        <field name="name">view.account.payment.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="vms_payment_type" options="{'no_create': True, 'no_open': True}" readonly="1"/>
            </field>
        </field>
    </record>
</odoo>
